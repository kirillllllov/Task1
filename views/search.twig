{% extends "__layout.twig" %}
{% block content %}
	<h2>Поиск</h2>
	<form action="" class="row g-3">
		<div class="col-md-4">
			<label for="type" class="form-label">Тип объекта</label>
			<select name="type" id="type" class="form-select">
				<option value="все">все</option>
				{% for type_bd in types_bd %}
					<option value="{{ type_bd.name }}">{{ type_bd.name }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="col-md-4">
			<label for="title" class="form-label">Название</label>
			<input type="text" class="form-control" id="title" name="title">
		</div>
		<div class="col-md-4">
			<label for="info" class="form-label">Описание</label>
			<input type="text" class="form-control" id="info" name="info">
		</div>
		<div class="col-12">
			<button type="submit" class="btn btn-primary">Найти</button>
		</div>
	</form>

	{% for object in objects %}
		<a href="/brz_cars/{{ object.id }}" class="a__search">{{ object.title }}<br></a>
	{% endfor %}


{% endblock %}
